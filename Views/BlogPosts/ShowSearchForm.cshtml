<h7>Search for a blog entry</h7>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="ShowSearchResults">

            <div class="form-group">
                <label for="SearchPhrase" class="control-label">Type searching phrase</label>
                <input name="SearchPhrase" class="form-control mt-1" />
            </div>

            <div class="form-group">
                <input type="submit" value="Search" class="btn btn-outline-secondary mt_button mb_button"/>
                <a asp-action="Index" asp-route-id="@Model?.Id"><button type="button" class="btn btn-outline-secondary mt_button mb_button">Back to List</button></a>
            </div>
        </form>
    </div>
</div>

