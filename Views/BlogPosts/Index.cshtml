@model IEnumerable<PersonalBlog.Models.BlogPost>

@{
    ViewData["Title"] = "Index";
}
<h7>Blog entry vault</h7>
<hr />

<button type="button" class="btn btn-outline-secondary" onclick="location.href='@Url.Action("Create", "BlogPosts")'">
    Create new entry
</button>


<div class="table-responsive-md">
    <table class="table table-borderless table-hover">
        <thead>
            <tr>
                <th>

                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Entry)
                    </td>
                    <td align="right">
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-secondary">Details</a>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-secondary">Edit</a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-secondary">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>



