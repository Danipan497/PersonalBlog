@model PersonalBlog.Models.BlogPost

@{
    ViewData["Title"] = "Edit";
}

<h7>Edit</h7>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Entry" class="control-label"></label>
                <input asp-for="Entry" class="form-control mt-1" />
                <span asp-validation-for="Entry" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EntryContent" class="control-label mt-3">Entry Content</label>
                <input asp-for="EntryContent" class="form-control mt-1" />
                <span asp-validation-for="EntryContent" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-outline-secondary mt_button mb_button" />
                <a asp-action="Index" asp-route-id="@Model?.Id" class="btn btn-outline-secondary mt_button mb_button">Back to List</a>
            </div>


        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
